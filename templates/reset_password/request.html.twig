{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="headline">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <a href="{{ path('app_dashboard') }}">
                        <img src="{{ asset('images/conuti-logo-white-90px.png') }}">
                    </a>
                </div>
                <div class="col-8">
                    <h1>{{ "Passwort zurücksetzen"|trans }}</h1>
                </div>
                <div class="col-1">
                </div>
                <div class="col-1">
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        {{ form_start(requestForm) }}


        <div class="form-floating mb-3">
            {{ form_widget(requestForm.email) }}
            {{ form_label(requestForm.email) }}
        </div>
        <div>
            <small>
                {{ "Geben Sie Ihre E-Mail-Adresse ein, und wir senden Ihnen einen Link zum Zurücksetzen Ihres Passworts."|trans }}
            </small>
        </div>

        <button class="btn btn-conuti mt-3">Send password reset email</button>
        {{ form_end(requestForm) }}
    </div>

{% endblock %}
