{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="headline">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <img src="{{ asset('images/conuti-logo-white-90px.png') }}">
                </div>
                <div class="col-8">
                    <h1>{{ "Login"|trans }}</h1>
                </div>
                <div class="col-1">
                </div>
                <div class="col-1">
                    {% if app.user %}
                            <a href="{{ path('app_logout') }}" title="{{ "Logout"|trans }}">
